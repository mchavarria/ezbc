{% extends "layout.html.twig" %}

{% block title %}{{ parent() }} {{ 'db.idx.title'|trans }}{% endblock %}

{% block sidebar %}
    {{ render(controller('AppBundle:Navigation:sidebarComponent', { 'currentItem': 'dashboard' })) }}
{% endblock %}

{% block page_header %}
    {{ 'db.idx.header.title'|trans }} <small>{{ 'db.idx.header.subtitle'|trans }}.</small>
{% endblock %}

{% block content %}
    <!-- begin row -->
    <div class="row">
        <!-- begin col-3 -->
        <div class="col-lg-4 col-md-6">
            <div class="widget widget-stats bg-red">
                <div class="stats-icon"><i class="fa fa-desktop"></i></div>
                <div class="stats-info">
                    <h4>{{ 'db.idx.stats.total.transactions'|trans|upper }}</h4>
                    <p>{{ getBcLogs(app.user) }}</p>
                </div>
                <div class="stats-link">
                    <a href="{{ path('app_bc_transaction_my', { id: app.user.id }) }}">{{ 'db.idx.stats.view.details'|trans }} <i class="fa fa-arrow-alt-circle-right"></i></a>
                </div>
            </div>
        </div>
        <!-- end col-3 -->
        <!-- begin col-3 -->
        <div class="col-lg-4 col-md-6">
            <div class="widget widget-stats bg-orange">
                <div class="stats-icon"><i class="fa fa-wallet"></i></div>
                <div class="stats-info">
                    <h4>{{ 'db.idx.stats.my.wallets'|trans|upper }}</h4>
                    <p>{{ app.user.wallets|length }}</p>
                </div>
                <div class="stats-link">
                    <a href="{{ path('app_wallet_my', { id: app.user.id }) }}">{{ 'db.idx.stats.view.details'|trans }} <i class="fa fa-arrow-alt-circle-right"></i></a>
                </div>
            </div>
        </div>
        <!-- end col-3 -->
        <!-- begin col-3 -->
        <div class="col-lg-4 col-md-6">
            <div class="widget widget-stats bg-grey-darker">
                <div class="stats-icon"><i class="fa fa-link"></i></div>
                <div class="stats-info">
                    <h4>{{ 'db.idx.stats.my.apis'|trans|upper }}</h4>
                    <p>{{ getApisQty(app.user) }}</p>
                </div>
                <div class="stats-link">
                    <a href="{{ path('app_api_management_my', { id: app.user.id }) }}">{{ 'db.idx.stats.view.details'|trans }} <i class="fa fa-arrow-alt-circle-right"></i></a>
                </div>
            </div>
        </div>
        <!-- end col-3 -->
    </div>
    <!-- end row -->
    <!-- begin row -->
    <div class="row">
        {{ include('@App/Backend/tx_list.html.twig') }}
    </div>
    <!-- end row -->
{% endblock %}
