{% extends "layout.html.twig" %}

{% block title %}{{ parent() }}{{ 'wallet.idx.title'|trans }}{% endblock %}

{% block sidebar %}
    {{ render(controller('AppBundle:Navigation:sidebarComponent', { 'currentItem': 'wallet' })) }}
{% endblock %}

{% block page_header %}
    {{ 'wallet.idx.header.title'|trans }} <small>{{ 'wallet.idx.header.subtitle'|trans }}.</small>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-lg-12">
            <a href="{{ path('app_wallet_new', { id: user.id }) }}" class="btn btn-primary">{{ 'wallet.idx.new.btn'|trans }}</a>
        </div>
        <!-- end col-12 -->
    </div>
    <br>
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-lg-12">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="table-basic-7">
                <!-- begin panel-heading -->
                <div class="panel-heading">
                    <div class="panel-heading-btn"></div>
                    <h4 class="panel-title">{{ 'wallet.idx.panel.title'|trans }}</h4>
                </div>
                <!-- end panel-heading -->
                <!-- begin panel-body -->
                <div class="panel-body">
                    <!-- begin table-responsive -->
                    <div class="table-responsive">
                        <table class="table table-striped m-b-0">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>{{ 'wallet.idx.panel.title.block.chain'|trans }}</th>
                                <th>{{ 'wallet.idx.panel.title.description'|trans }}</th>
                                <th width="1%"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for wallet in user.wallets %}
                            <tr>
                                <td class="with-img">
                                    <img src="{{ asset('img/admin/wallet/'~wallet.bcType~'.jpg') }}" class="img-rounded height-30" />
                                </td>
                                <td>{{ wallet.bcType|capitalize }}</td>
                                <td>{{ (wallet.description) ? wallet.description|slice(0, 60) ~ '...' : 'wallet.idx.panel.list.no.description'|trans }}</td>
                                <td class="with-btn" nowrap>
                                    <a href="{{ path('app_wallet_edit', { id: wallet.id }) }}" class="btn btn-sm btn-primary m-r-2">{{ 'wallet.idx.panel.list.edit'|trans }}</a>
                                    <a href="{{ path('app_wallet_info', { id: wallet.id }) }}" class="btn btn-sm btn-white m-r-2">{{ 'wallet.idx.panel.list.more.info'|trans }}</a>
                                </td>
                            </tr>
                            {% else %}
                                <tr>
                                    <td class="with-img">
                                        <img src="{{ asset('img/admin/wallet/none.jpg') }}" class="img-rounded height-30" />
                                    </td>
                                    <td>---</td>
                                    <td>{{ 'wallet.idx.panel.list.no.wallet'|trans }}</td>
                                    <td class="with-btn" nowrap>
                                        <a href="{{ path('app_wallet_new', { id: user.id }) }}" class="btn btn-sm btn-primary m-r-2">{{ 'wallet.idx.panel.list.new'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- end table-responsive -->
                </div>
                <!-- end panel-body -->
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
{% endblock %}