{% extends "layout.html.twig" %}

{% block title %}{{ parent() }}{{ 'wallet.info'|trans }}{% endblock %}

{% block sidebar %}
    {{ render(controller('AppBundle:Navigation:sidebarComponent', { 'currentItem': 'wallet' })) }}
{% endblock %}

{% block page_header %}
    {{ 'wallet.info'|trans }} <small>{{ 'wallet.info.from.blockchain'|trans }}.</small>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- begin col-6 -->
        <div class="col-lg-6">
            <div class="widget widget-stats bg-gradient-blue m-b-10">
                <div class="stats-icon stats-icon-lg"><i class="fa fa-dollar-sign fa-fw"></i></div>
                <div class="stats-content">
                    <div class="stats-title">{{ 'wallet.balance'|trans }}</div>
                    <div class="stats-number">{{ info.balance }}</div>
                    <div class="stats-progress progress">
                        <div class="progress-bar" style="width: 20.5%;"></div>
                    </div>
                    <div class="stats-desc">Better than last week (40.5%)</div>
                </div>
            </div>
        </div>
        <!-- end col-6 -->
    </div>
{% endblock %}