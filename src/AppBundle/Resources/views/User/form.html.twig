{% form_theme form 'bootstrap_4_layout.html.twig' %}

<div class="panel-body">
    {{ form_start(form, { 'action': user.id ? path('app_user_edit', { id: user.id }) : path('app_user_new') }) }}
        <fieldset>
            <legend class="m-b-15">Legend</legend>

            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.username) }}
            {{ form_row(form.type) }}
            {% if user.id is null %}
                {{ form_row(form.plainPassword) }}
            {% endif %}

            <button type="submit" class="btn btn-sm btn-primary m-r-5">{{ user.id ? 'user.form.save'|trans : 'user.form.create'|trans }}</button>
            <a href="{{ path('app_user_index')}}" class="btn btn-sm btn-default">{{ 'user.form.cancel'|trans }}</a>
        </fieldset>
    {{ form_end(form) }}
</div>