{% extends "layout.html.twig" %}

{% block title %}{{ parent() }}{{ 'api.idx.title'|trans }}{% endblock %}

{% block sidebar %}
    {{ render(controller('AppBundle:Navigation:sidebarComponent', { 'currentItem': 'api_end_point' })) }}
{% endblock %}

{% block page_header %}
    {{ 'api.idx.header.title'|trans }} <small>{{ 'api.idx.header.subtitle'|trans }}.</small>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-lg-12">
            <a href="{{ path('app_api_management_new_end_point') }}" class="btn btn-primary">{{ 'api.idx.new.btn'|trans }}</a>
        </div>
        <!-- end col-12 -->
    </div>
    <br>
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-lg-12">
            <!-- begin panel -->
            <div class="panel panel-inverse" data-sortable-id="table-basic-7">
                <!-- begin panel-heading -->
                <div class="panel-heading">
                    <div class="panel-heading-btn"></div>
                    <h4 class="panel-title">{{ 'api.idx.panel.title'|trans }}</h4>
                </div>
                <!-- end panel-heading -->
                <!-- begin panel-body -->
                <div class="panel-body">
                    <!-- begin table-responsive -->
                    <div class="table-responsive">
                        <table class="table table-striped m-b-0">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>{{ 'api.idx.panel.title.name'|trans }}</th>
                                <th>{{ 'api.idx.panel.title.description'|trans }}</th>
                                <th>{{ 'idx.panel.title.creation.date'|trans }}</th>
                                <th width="1%"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for endPoint in apiEndPoints %}
                                <tr>
                                    <td>{{ endPoint.id }}</td>
                                    <td>{{ endPoint.name }}</td>
                                    <td>{{ endPoint.description }}</td>
                                    <td>{{ endPoint.createdDate|date('Y-m-d') }}</td>
                                    <td class="with-btn" nowrap>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('app_api_management_edit_end_point', { id: endPoint.id }) }}" class="btn btn-sm btn-green m-r-2">{{ 'api.idx.panel.list.edit'|trans }}</a>
                                        {% endif %}
                                        <a href="{{ path('app_api_management_stats', { id: endPoint.id }) }}" class="btn btn-sm btn-primary m-r-2">{{ 'api.idx.panel.list.transactions'|trans }}</a>
                                        <a href="{{ path('app_api_management_details', { id: endPoint.id }) }}" class="btn btn-sm btn-white m-r-2">{{ 'api.idx.panel.list.detail'|trans }}</a>
                                        <a href="#" class="btn btn-sm btn-danger">{{ 'api.idx.panel.list.delete'|trans }}</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="with-img">
                                        <img src="{{ asset('img/admin/wallet/none.jpg') }}" class="img-rounded height-30" />
                                    </td>
                                    <td>{{ 'api.idx.panel.list.no.api'|trans }}</td>
                                    <td>---</td>
                                    <td class="with-btn" nowrap>
                                        <a href="{{ path('app_wallet_new', { id: user.id }) }}" class="btn btn-sm btn-primary m-r-2">{{ 'api.idx.panel.list.new'|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- end table-responsive -->
                </div>
                <!-- end panel-body -->
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
{% endblock %}