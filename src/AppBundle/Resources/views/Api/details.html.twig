{% extends "layout.html.twig" %}

{% block title %}{{ parent() }}{{ 'api.detail.title'|trans }}{% endblock %}

{% block sidebar %}
    {{ render(controller('AppBundle:Navigation:sidebarComponent', { 'currentItem': 'wallet' })) }}
{% endblock %}

{% block page_header %}
    {{ 'api.detail.header.title'|trans }} <small>{{ 'api.detail.header.subtitle'|trans }}.</small>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- begin col-6 -->
        <div class="col-lg-6">
            <div class="widget widget-stats bg-gradient-blue m-b-10">
                <div class="stats-icon stats-icon-lg"><i class="fa fa-dollar-sign fa-fw"></i></div>
                <div class="stats-content">
                    <div class="stats-title">{{ 'api.detail.panel.header'|trans }}</div>
                    <div class="stats-number">
                        {% set apiUrl = url('app_api_consume', { id: aep.id, hash:'YOUR_FILE_HASH' }) %}
                    </div>
                    <div class="stats-progress progress">
                        <div class="progress-bar" style="width: 20.5%;"></div>
                    </div>
                    <div class="stats-desc">{{ 'api.detail.panel.description'|trans }}</div>
                </div>
            </div>
            <h1>{{ apiUrl }}</h1>
        </div>
        <!-- end col-6 -->
    </div>
{% endblock %}